# Application
APP_ENV=development
APP_NAME=ESMS

# OIDC Authentication
OIDC_ISSUER=https://accounts.google.com
OIDC_CLIENT_ID=your-client-id-here
OIDC_CLIENT_SECRET=your-client-secret-here
OIDC_REDIRECT_URL=http://localhost:3000/api/auth/callback

# Session
SESSION_SECRET=change-this-to-random-string-in-production

# Database
DATABASE_URL=postgres://esms_user:esms_pass@localhost:5432/esms?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379/0

# SMTP (for development, using MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@esms.local

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_TELEMETRY_DISABLED=1

# Backend API
API_PORT=8080
API_TIMEOUT=30s

# Worker
WORKER_CONCURRENCY=10
WORKER_RETRY_MAX=3
